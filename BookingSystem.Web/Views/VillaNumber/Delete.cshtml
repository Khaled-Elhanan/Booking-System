@model VillaNumber

<div class="container py-4">
	<div class="card shadow border-0 mb-4">
		<div class="card-header bg-success bg-gradient text-white d-flex justify-content-between align-items-center">
			<h2 class="mb-0">Delete Villa</h2>
			<a asp-action="Index" class="btn btn-light text-success">
				<i class="bi bi-arrow-left-circle"></i> Back to List
			</a>
		</div>
		<div class="card-body">
			<form asp-action="Delete" method="post">
				@Html.AntiForgeryToken()
				<input asp-for="Villa_Number" hidden />
				<div class="mb-3">
				
	
						
				</div>

				<div class="mb-3">
					<label asp-for="Villa.Name"  class="form-label"></label>
					<input asp-for="Villa.Name" disabled class="form-control" />

				</div>

				<div class="mb-3">
					<label asp-for="Villa_Number"  class="form-label"></label>
					<input asp-for="Villa_Number"  disabled class="form-control" />
				</div>

				<div class="mb-3">
					<label asp-for="SpecialDetails" class="form-label"></label>
					<input asp-for="SpecialDetails" disabled class="form-control" />
				</div>



				<div class="text-end">
					<button type="submit" class="btn btn-success">
						<i class="bi bi-check-circle"></i> Delete
					</button>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
		
	}
}
