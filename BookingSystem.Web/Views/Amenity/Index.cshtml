@model IEnumerable<Amenity>

<div class="container py-4">
    <div class="card shadow border-0 mb-4">
        <div class="card-header bg-success bg-gradient text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Villa List</h2>
            <a asp-action="Create" class="btn btn-light text-success">
                <i class="bi bi-plus-circle"></i>  Add New Amenity 
            </a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-success">
                    <tr>
                        <th scope="col"><i class="bi bi-house-door"></i> Id</th> 
                        <th scope="col"><i class="bi bi-house-door"></i>  Name</th>
                        <th scope="col"><i class="bi bi-currency-dollar"></i> Villa Name</th>


                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var obj in Model)
                        {
                            <tr>
                                <td>@obj.Id</td>
                                <td>@obj.Name</td>
                                <td>@obj.Villa.Name</td>

                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-amenitieId="@obj.Id" class="btn btn-outline-primary btn-sm me-1" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-amenitieId="@obj.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="bi bi-exclamation-circle"></i> No villas found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
